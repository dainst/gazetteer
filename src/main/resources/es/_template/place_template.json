{
    "template" : "gazetteer*",
    "settings" : {
        "analysis": {
            "analyzer" : {
            	"default": {
            		"tokenizer" : "standard",
                    "filter" : ["lowercase", "folding"]
            	},
            	"raw": {
            		"tokenizer": "keyword",
            		"filter": ["lowercase"]
            	},
                "autocomplete": {
          			"type": "custom",
          			"tokenizer": "ngramTokenizer",
          			"filter" :["lowercase", "folding"]
          		} 
            },
            "tokenizer" : {
            	"ngramTokenizer" : {
                	"type" : "edgeNGram",
                    "min_gram" : "2",
                    "max_gram" : "50",
                    "token_chars": []
				}
			},
            "filter" : {
                "lowercase" : {
                	"type" : "lowercase"
                },
                "folding": {
                	"type": "icu_folding",
                	"unicodeSetFilter": "[^äöüÄÖÜß]"
                }
            }
        }
    },
    "mappings" : {
	    "place": {
	    	"_all": {
	    		"omit_norms": true
	    	},
	        "properties": {
	            "prefName": {
	                "properties": {
	                    "language": {
	                        "type": "keyword",
	                        "include_in_all": false
	                    },
	                    "title": {
	                        "type": "text",
							"omit_norms": true,
							"fields": {
								"raw": {
									"type": "text",
									"analyzer": "raw"
								},
	                    		"sort": {
									"type": "icu_collation_keyword",
									"index": "false",
									"language": "de",
									"country": "DE",
									"numeric": true
								},
								"suggest": {
									"type": "completion",
									"analyzer": "default"
								},
								"autocomplete": {
									"type": "text",
									"analyzer": "autocomplete"
								}
							}   
						}
	                }
	            },
	            "names": {
	            	"type": "nested",
					"include_in_parent": true,
	                "properties": {
	                    "language": {
	                        "type": "keyword",
							"include_in_all": false
	                    },
	                    "title": {
	                        "type": "text",
							"omit_norms": true,
							"fields": {
								"raw": {
									"type": "text",
									"analyzer": "raw"
								},
	                    		"sort" : {
									"type": "icu_collation_keyword",
									"index": "false",
									"language": "de",
									"country": "DE",
									"numeric": true
								},
								"suggest" : {
									"type": "completion",
									"analyzer": "default"
								},
								"autocomplete": {
									"type": "text",
									"analyzer": "autocomplete"
								}
							}
	                    }
	                }
	            },
	            "suggestionNames": {
					"type": "text",
					"fields": {
						"raw": {
							"type": "text",
							"analyzer": "raw"
						},
						"suggest" : {
							"type": "completion",
							"analyzer": "default",
							"contexts": [
								{
									"name": "recordGroupId",
									"type": "category",
									"path": "recordGroupId"
								}
							]
						}
	            	},
					"include_in_all": false
	            },
	            "prefLocation": {
	            	"properties": {
	                    "confidence": {
	                        "type": "long",
							"include_in_all": false
	                    },
	                    "coordinates": {
	                        "type": "geo_point",
							"include_in_all": false
						},
						"altitude": {
	            			"type": "double",
	            			"include_in_all": false
	            		},
						"shape": {
							"type": "geo_shape"
						}
	                }
	            },
	            "locations": {
	            	"type": "nested",
	                "properties": {
	                    "confidence": {
	                        "type": "long",
							"include_in_all": false
	                    },
	                    "coordinates": {
	                        "type": "geo_point",
							"include_in_all": false
						},
						"altitude": {
	            			"type": "double",
	            			"include_in_all": false
	            		},
						"shape": {
							"type": "geo_shape"
						}
	                }
	            },
	            "children": {
	                "type": "integer",
					"include_in_all": false
	            },
	            "deleted": {
	                "type": "boolean"
	            },
	            "ids": {
	            	"type": "nested",
	                "properties": {
	                    "context": {
	                        "type": "keyword",
							"index": "not_analyzed",
							"include_in_all": false
	                    },
	                    "value": {
	                        "type": "keyword",
	                        "index": "not_analyzed"
	                    }
	                }
	            },
	            "links": {
	            	"type": "nested",
	                "properties": {
	                    "object": {
	                        "type": "keyword",
							"index": "not_analyzed"
	                    },
	                    "predicate": {
	                        "type": "keyword",
							"index": "not_analyzed",
							"include_in_all": false
	                    },
	                    "description": {
	                    	"type": "keyword",
	                    	"index": "not_analyzed"
	                    }
	                }
	            },
	            "needsReview": {
	                "type": "boolean"
	            },
	            "parent": {
	                "type": "keyword",
					"include_in_all": false
	            },
	            "ancestors": {
					"type": "keyword",
					"include_in_all": false
	            },
	            "relatedPlaces": {
	            	"type": "keyword"
	            },
	            "types": {
	                "type": "keyword",
	                "index": "not_analyzed"
				},
				"tags": {
					"type": "keyword",
					"index": "not_analyzed",
					"fields": {
	               		"suggest" : {
							"type": "completion"
						}
					}
				},
				"provenance": {
					"type": "keyword",
					"fields": {
	               		"suggest" : {
							"type": "completion"
						}
					}
				},
				"comments": {
					"properties": {
						"text": {
							"type": "text",
							"include_in_all": false
						},
						"language": {
							"type": "keyword",
							"include_in_all": false
						},
						"user": {
							"type": "keyword",
							"include_in_all": false
						}
					}
				},
				"commentsReisestipendium": {
					"properties": {
						"text": {
							"type": "text",
							"include_in_all": false
						},
						"language": {
							"type": "keyword",
							"include_in_all": false
						},
						"user": {
							"type": "keyword",
							"include_in_all": false
						}
					}
				},
				"noteReisestipendium": {
					"type": "text",
					"include_in_all": false
				},
				"groupInternalData": {
					"type": "nested",
					"properties": {
						"text": {
							"type": "text",
							"include_in_all": false
						},
						"groupId": {
							"type": "keyword",
							"include_in_all": false
						}
					}
				},
				"recordGroupId": {
					"type": "keyword",
					"include_in_all": false
				},
				"lastChangeDate": {
					"type": "date",
					"include_in_all": false
				},
	            "_class": {
	                "type": "keyword",
					"include_in_all": false
	            }
	        }
	    }
    }
}