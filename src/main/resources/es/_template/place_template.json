{
    "template" : "gazetteer*",
    "settings" : {
        "analysis": {
            "analyzer" : {
            	"default": {
            		"tokenizer" : "standard",
                    "filter" : ["standard", "icu_folding"]
            	},
            	"raw": {
            		"tokenizer": "keyword",
            		"filter": ["lowercase"]
            	},
                "collation" : {
                    "tokenizer" : "keyword",
                    "filter" : ["collation_filter"]
                }
            },
            "filter" : {
                "collation_filter" : {
                    "type" : "icu_collation",
                    "language" : "de"
                },
                "lowercase" : {
                	"type" : "lowercase"
                }
            }
        }
    },
    "mappings" : {
	    "place": {
	    	"_all": {
	    		"omit_norms": true
	    	},
	        "properties": {
	            "prefName": {
	                "properties": {
	                    "language": {
	                        "type": "string",
	                        "include_in_all": false
	                    },
	                    "modern": {
	                        "type": "boolean",
	                        "include_in_all": false
	                    },
	                    "ordering": {
	                    	"type": "string",
	                    	"include_in_all": false
	                    },
	                    "title": {
	                        "type": "string",
							"omit_norms": true,
							"fields": {
								"raw": {
									"type": "string",
									"analyzer": "raw"
								},
	                    		"sort" : {
									"type": "string",
									"analyzer": "collation"
								},
								"suggest" : {
									"type": "completion"
								}
							}   
						}
	                }
	            },
	            "names": {
	            	"type": "nested",
					"include_in_parent": true,
	                "properties": {
	                    "language": {
	                        "type": "string",
							"include_in_all": false
	                    },
	                    "modern": {
	                        "type": "boolean",
							"include_in_all": false
	                    },
	                    "ordering": {
	                    	"type": "string",
	                    	"include_in_all": false
	                    },
	                    "title": {
	                        "type": "string",
							"omit_norms": true,
							"fields": {
								"raw": {
									"type": "string",
									"analyzer": "raw"
								},
	                    		"sort" : {
									"type": "string",
									"analyzer": "collation"
								},
								"suggest" : {
									"type": "completion"
								}
							}
	                    }
	                }
	            },
	            "prefLocation": {
	            	"properties": {
	                    "confidence": {
	                        "type": "long",
							"include_in_all": false
	                    },
	                    "coordinates": {
	                        "type": "geo_point",
							"include_in_all": false
						},
						"altitude": {
	            			"type": "double",
	            			"include_in_all": false
	            		},
						"shape": {
							"type": "geo_shape",
							"include_in_all": false
						}
	                }
	            },
	            "locations": {
	            	"type": "nested",
	                "properties": {
	                    "confidence": {
	                        "type": "long",
							"include_in_all": false
	                    },
	                    "coordinates": {
	                        "type": "geo_point",
							"include_in_all": false
						},
						"altitude": {
	            			"type": "double",
	            			"include_in_all": false
	            		},
						"shape": {
							"type": "geo_shape",
							"include_in_all": false
						}
	                }
	            },
	            "children": {
	                "type": "integer",
					"include_in_all": false
	            },
	            "deleted": {
	                "type": "boolean"
	            },
	            "ids": {
	            	"type": "nested",
	                "properties": {
	                    "context": {
	                        "type": "string",
							"index": "not_analyzed",
							"include_in_all": false
	                    },
	                    "value": {
	                        "type": "string",
	                        "index": "not_analyzed"
	                    }
	                }
	            },
	            "links": {
	            	"type": "nested",
	                "properties": {
	                    "object": {
	                        "type": "string",
							"index": "not_analyzed"
	                    },
	                    "predicate": {
	                        "type": "string",
							"index": "not_analyzed",
							"include_in_all": false
	                    }
	                }
	            },
	            "needsReview": {
	                "type": "boolean"
	            },
	            "parent": {
	                "type": "string",
					"include_in_all": false
	            },
	            "relatedPlaces": {
	            	"type": "string"
	            },
	            "types": {
	                "type": "string",
	                "index": "not_analyzed"
				},
				"tags": {
					"type": "string",
					"fields": {
	               		"suggest" : {
						"type": "completion"
						}
					}
				},
				"provenance": {
					"type": "string",
					"fields": {
	               		"suggest" : {
						"type": "completion"
						}
					}
				},
				"recordGroupId": {
					"type": "string",
					"include_in_all": false
				},
	            "_class": {
	                "type": "string",
					"include_in_all": false
	            }
	        },
			"transform" : {
				"script": "if (ctx._source['deleted'] == true) ctx._source['prefName'] = null",
				"lang": "groovy"
    		}
	    }
    }
}